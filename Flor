<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Girasol en Canvas</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        canvas {
            border: 1px solid #000;
        }
    </style>
</head>
<body>
    <canvas id="girasolCanvas" width="400" height="400"></canvas>

    <script>
        const canvas = document.getElementById('girasolCanvas');
        const ctx = canvas.getContext('2d');

        // Dibujar el centro del girasol
        function dibujarCentro() {
            ctx.beginPath();
            ctx.arc(200, 200, 50, 0, 2 * Math.PI); // Centro marrón
            ctx.fillStyle = "#8B4513"; // Color marrón
            ctx.fill();
            ctx.closePath();
        }

        // Dibujar pétalos
        function dibujarPetalos() {
            const petalos = 20;
            const radioExterno = 120;
            const radioInterno = 50;

            for (let i = 0; i < petalos; i++) {
                const angulo = (2 * Math.PI / petalos) * i;
                const x = 200 + Math.cos(angulo) * radioInterno;
                const y = 200 + Math.sin(angulo) * radioInterno;

                ctx.beginPath();
                ctx.ellipse(x, y, 30, 60, angulo, 0, 2 * Math.PI);
                ctx.fillStyle = "#FFD700"; // Amarillo para los pétalos
                ctx.fill();
                ctx.closePath();
            }
        }

        // Dibujar tallo
        function dibujarTallo() {
            ctx.beginPath();
            ctx.moveTo(200, 250);
            ctx.lineTo(200, 400);
            ctx.lineWidth = 10;
            ctx.strokeStyle = "#228B22"; // Color verde del tallo
            ctx.stroke();
            ctx.closePath();
        }

        // Dibujar hojas
        function dibujarHojas() {
            ctx.beginPath();
            ctx.ellipse(180, 300, 40, 20, Math.PI / 4, 0, 2 * Math.PI); // Hoja izquierda
            ctx.ellipse(220, 350, 40, 20, -Math.PI / 4, 0, 2 * Math.PI); // Hoja derecha
            ctx.fillStyle = "#228B22"; // Color verde de las hojas
            ctx.fill();
            ctx.closePath();
        }

        // Función principal para dibujar el girasol
        function dibujarGirasol() {
            dibujarCentro();
            dibujarPetalos();
            dibujarTallo();
            dibujarHojas();
        }

        // Dibujar el girasol cuando cargue la página
        window.onload = dibujarGirasol;
    </script>
</body>
</html>
